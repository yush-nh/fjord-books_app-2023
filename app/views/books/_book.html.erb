<div id="<%= dom_id book %>">
  <p>
    <strong><%= t('books.index.title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t('books.index.memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('books.index.author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('books.index.picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
