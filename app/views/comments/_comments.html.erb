<% if comments.any? %>
  <p><%= t('activerecord.models.comment') %></p>
  <% comments.each do |comment| %>
    <p>
      <%= comment.content %>
      <% if comment.user.name %>
        <%= link_to "@#{comment.user.name}", comment.user %>
      <% else %>
        <%= link_to "@#{comment.user.email}", comment.user %>
      <% end %>
      <%= format_datetime(comment.created_at) %>
      <% if comment.user == current_user %>
        <%= button_to t('views.common.destroy', name: Comment.model_name.human),
                      polymorphic_path([commentable, comment]), method: :delete %>
      <% end %>
    </p>
  <% end %>
<% else %>
  <p><%= t('views.comment.no_comment') %></p>
<% end %>
